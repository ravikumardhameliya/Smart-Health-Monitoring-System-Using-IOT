import max30102
import hrcalc
import matplotlib.pyplot as plt
import numpy as np


m = max30102.MAX30102()

# 100 samples are read and used for HR/SpO2 calculation in a single loop
while True:
    red, ir = m.read_sequential()
    hr,hrb,sp,spb =(hrcalc.calc_hr_and_spo2(ir, red))
    print(hr,hrb)
    print(sp,spb)
